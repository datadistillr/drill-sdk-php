    "license": "Apache-2.0",
    "authors" : [
        {
            "name": "Tim Swagger",
            "email": "tim@datadistillr.com"
        },
        {
            "name": "Charles Givre",
            "email": "cgivre@thedataist.com"
        }
    ],
    "require-dev": {
